+static ngx_int_t
+ngx_proxy_protocol_v2_next_tlv(u_char **curptr, u_char *last, 
+    ngx_proxy_protocol_tlv_t *tlv)
+{
+    uint8_t type;
+    uint16_t len;
+    u_char *cur = *curptr;
+    if(cur == last) {
+        //no more TLVs
+        return NGX_DONE;
+    }
+    if(cur+3 > last) {
+        return NGX_ERROR;
+    }
+    type = *cur;
+    cur++;
+    len = ngx_proxy_protocol_parse_uint16(cur);
+    cur+=2;
+    if(cur+len > last) {
+        return NGX_ERROR;
+    }
+    tlv->type = type;
+    tlv->val.len = len;
+    tlv->val.data = cur;
+    *curptr = cur+len;
+    return NGX_OK;
+}
